<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="ZjyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="yanhuo_btn_base">
        <!-- Customize your theme here. -->
       <item name="android:paddingTop">15dp</item>
       <item name="android:paddingBottom">15dp</item>
    </style>
    <style name="yanhuo_btn_right" parent="yanhuo_btn_base">
        <item name="android:layout_marginLeft">40dp</item>
    </style>
    <style name="dialog_button" parent="button.transparent">
        <!--    <item name="android:borderlessButtonStyle">?android:borderlessButtonStyle</item>-->
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>
    <style name="button.transparent" parent="AppTheme">
        <!--    <item name="android:borderlessButtonStyle">?android:borderlessButtonStyle</item>-->
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="myButton">
        <item name="android:background">@drawable/btn_click</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="myButton_large">
        <item name="android:background">@drawable/btn_click</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="lrPadding">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="zjy_theme_stautebar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionBar">false</item>


    </style>
    <!--<style name="zjy_theme_stautebar" parent="Theme.">-->
    <!--<item name="android:windowActionModeOverlay">true</item>-->

    <!--</style>-->


    <style name="caigouedit_items">
        <item name="android:textColor">#a85cff</item>
    </style>

    <style name="Popwindow_animation">
        <item name="android:windowEnterAnimation">@anim/pop_show_translate</item>
        <item name="android:windowExitAnimation">@anim/pop_dismiss_translate</item>
    </style>

    <declare-styleable name="WarpLinearLayout">
        <attr name="grivate" format="enum"><!--对齐方式 !-->
            <enum name="right" value="0"/>
            <enum name="left" value="1"/>
            <enum name="center" value="2"/>
        </attr>
        <attr name="horizontal_Space" format="dimension"/>
        <attr name="vertical_Space" format="dimension"/>
        <attr name="isFull" format="boolean"/>
    </declare-styleable>
    <style name="material_ed_yundan">
        <item name="met_floatingLabel">highlight</item>
        <item name="met_primaryColor">@color/color_materialed_primary</item>
        <item name="met_baseColor">@color/title_background</item>
        <item name="met_textColorHint">@color/color_materialed_hint</item>
        <item name="met_floatingLabelAlwaysShown">false</item>
        <item name="met_textColor">@color/black_de</item>
        <!--<item name="met_floatingLabelTextColor">@color/black_de</item>-->
    </style>

    <style name="material_autocomplete_baoguan" parent="material_ed_yundan">
        <item name="met_clearButton">true</item>
    </style>
    <style name="WarpLinearLayoutDefault">
        <item name="grivate">left</item>
        <item name="horizontal_Space">0dp</item>
        <item name="vertical_Space">5dp</item>
        <item name="isFull">true</item>
    </style>

    <style name="zjy_title">
        <!--<item name="android:background">@color/title_background</item>-->
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="zjy_button_nomarl_alpha100" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/btn_padding</item>
    </style>
    <style name="zjy_button_nahuo" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_selector_hasbg</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/btn_padding</item>
    </style>
    <style name="zjy_button_nomarl_alpha100_large" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/btn_padding</item>
    </style>
    <style name="zjy_button_light" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_light_button</item>
        <item name="android:textColor">@color/button_light_content</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="zjy_lv_divider">
        <item name="android:dividerHeight">2dp</item>
        <item name="android:divider">@drawable/divider</item>
    </style>
</resources>
