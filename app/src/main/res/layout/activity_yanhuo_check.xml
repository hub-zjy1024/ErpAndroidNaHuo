<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_nomarl_bg_gray"
    tools:context="com.b1b.js.erpandroid_nahuo.activity.YanhuoCheckActivity">

    <include layout="@layout/title_normal_toobar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="当前单据号"
                android:textColor="@color/color_black"
                android:textSize="@dimen/zjy_text_size_1"/>

            <TextView
                android:id="@+id/activity_yanhuocheck_tvpid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="0dp"
                android:text="当前单据号"
                android:textColor="@color/color_black"
                android:textSize="@dimen/zjy_text_size_1"
                />
        </LinearLayout>
        <LinearLayout
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="right"
                android:id="@+id/activity_yanhuocheck_tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tag"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/activity_yanhuocheck_ed_mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:hint="验货信息，验货不通过时请填写"
                android:lines="2"
                android:maxLines="2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <Button
                    android:id="@+id/activity_yanhuocheck_btn_ok"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/yanhuo_btn_base"
                    android:drawableLeft="@drawable/gc_deal_sign_ok"
                    android:text="验货"
                    />

                <Button
                    android:id="@+id/activity_yanhuocheck_btn_fail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/yanhuo_btn_right"
                    android:drawableLeft="@drawable/gc_deal_sign_deny"
                    android:text="验货有误"/>
            </LinearLayout>


            <LinearLayout
                android:background="@color/color_white"
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/activity_yanhuocheck_btn_takepic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/yanhuo_btn_base"
                    android:text="拍照"/>

                <Button
                    android:id="@+id/activity_yanhuocheck_btn_viewpic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="查看图片"
                    android:layout_weight="1"
                    style="@style/yanhuo_btn_right"
                    android:visibility="visible"/>
                <Button
                    android:id="@+id/activity_yanhuocheck_btn_baoguan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="报关"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/zjy_text_size_1"
                    android:text="供应商:"/>
                <TextView
                    android:id="@+id/activity_yanhuocheck_tv_provider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/zjy_text_size_1"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/zjy_text_size_1"
                    android:text="收款人:"/>
                <TextView
                    android:id="@+id/activity_yanhuocheck_tv_payby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/zjy_text_size_1"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/zjy_text_size_1"
                    android:text="开户行:"/>
                <TextView
                    android:id="@+id/activity_yanhuocheck_tv_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/zjy_text_size_1"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/zjy_text_size_1"
                    android:text="账号:"/>
                <TextView
                    android:id="@+id/activity_yanhuocheck_tv_bankaccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/zjy_text_size_1"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/zjy_text_size_1"
                    android:text="供应商开票:"/>
                <TextView
                    android:id="@+id/activity_yanhuocheck_tv_kapiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/zjy_text_size_1"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/activity_yanhuocheck_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="jdsfopqjwepofjopasjfwe"
            android:textColor="@color/black_de"
            android:textSize="@dimen/zjy_text_size_1"
            />

        <ListView
            android:layout_marginTop="10dp"
            android:background="@color/color_white"
            android:padding="@dimen/activity_horizontal_margin"
            android:id="@+id/activity_yanhuocheck_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</LinearLayout>
