<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:orientation="vertical">


        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/item_nahuo_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/item_menu_nahuo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_black"
        android:textSize="@dimen/def_text_size_smalll"
        android:layout_toRightOf="@id/item_nahuo_iv"/>

    <TextView
        android:id="@+id/item_nahuo_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_menu_nahuo_tv"
        android:layout_below="@id/item_menu_nahuo_tv"/>

</RelativeLayout>